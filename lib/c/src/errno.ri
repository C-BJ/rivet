import "c/libc";

public class ErrnoError : Error {
    public code: i32;
}

#[inline]
public func errno() i32 {
    return unsafe {
#if _LINUX_
        libc.__errno_location().?.*
#else
        libc._errno().*
#endif
    };
}

public func errno_msg(code: i32 = errno()) string {
    unsafe {
        let s = libc.strerror(code);
        return if s is nil { "" } else { string.from_raw(s) };
    }
}

#[inline]
public func last_errno_error() ErrnoError {
    return ErrnoError(errno_msg(), errno());
}
