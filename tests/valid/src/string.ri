import "c/libc";

test "string index" {
    x := "String Literal";
    @assert(x[0] == b'S');

    ch := "String Literal"[0];
    @assert(ch == b'S');
}

test "byte string literal" {
    x := b"Abcdef";
    @assert(x.len == 6);
}

test "C string literal" {
    pstr := c"Hello World!";
    @assert(unsafe { libc.strlen(pstr) == 12 });
}
