import "std/hash/fnv1a";

test "std.hash.fnv1a.sum32()" {
	let a_hash: uint32 = 0x10bc2abf;
	let a = "apple";
	let b = fnv1a.sum32_string(a);
	let c = fnv1a.sum32(a.as_bytes());
	let d = unsafe { fnv1a.sum32_bytes(a.ptr, a.len) };
	@assert(b == a_hash);
	@assert(c == a_hash);
	@assert(d == a_hash);
}

test "std.hash.fnv1a.sum64()" {
	let a = "apple";
	let a_hash: uint64 = 0xf74a62a458befdbf;
	let b = fnv1a.sum64_string(a);
	let c = fnv1a.sum64(a.as_bytes());
	let d = unsafe { fnv1a.sum64_bytes(a.ptr, a.len) };
	@assert(b == a_hash);
	@assert(c == a_hash);
	@assert(d == a_hash);
}
