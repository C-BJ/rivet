using pkg::traits::ToString;

pub struct Pos {
    pub file: String;
    pub line: usize;
    pub col: usize;
    pub pos: usize;
}

extend Pos for ToString {
    pub fn to_string(&self) String {
        return "{}:{}:{}".fmt(self.file, self.line + 1, self.col);
    }
}
