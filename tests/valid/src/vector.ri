test "vector from array" {
    let mut arr = [1, 2, 3]!;
    let mut vec = arr[..];
    vec.push(2);
    @assert(vec.len == 4);

    let vec2 = vec.clone();
    @assert(vec2.len == 4);
}

test "`@vec` builtin function" {
    {
        let mut v = @vec(i32);
        v.push(5);
        @assert(v[0] == 5);
    }
    {
        let mut v = @vec(i32, 2);
        v.push(5);
        @assert(v.cap == 2);
        @assert(v[0] == 5);
    }
}
